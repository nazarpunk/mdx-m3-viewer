{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "./dist/cjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "clients",
    "clean.js",
    "webpack.config.js",
    "dist"
  ]
}